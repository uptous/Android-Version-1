<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf9eb"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="#c9c9c3"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/layout_searchbar"

            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/text_view_cancel"
            android:background="@drawable/rounded_all_files"
            android:gravity="center">


            <android.support.v7.widget.SearchView
                android:maxLines="1"
                android:id="@+id/serach_view_filter"
                style="@style/AppTheme.SearchView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                />

            <TextView

                android:id="@+id/text_view_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="Search"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/text_view_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="Cancel"
            android:textColor="@color/tab_indicator"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal"
     >


        <TextView
            android:id="@+id/text_view_albums"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/rounded_all_files_fill"
            android:gravity="center"
            android:text="Albums"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/text_view_files"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/rounded_all_files_empty_second"
            android:gravity="center"
            android:text="Files"
            android:textColor="#000" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Files in reverse Chronological order"
        android:textColor="#000"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_albums"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_files"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView

            android:id="@+id/recycler_view_albums"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>