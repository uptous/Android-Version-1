<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf9eb"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_below="@+id/layout_search"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="#ddd"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:text="SEARCH RESULTS"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_album_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_view_albums"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/rounded_all_files_fill"
            android:gravity="center"
            android:text="Albums"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/text_view_files"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/rounded_all_files_empty_second"
            android:gravity="center"
            android:text="Files"
            android:textColor="#000" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Files in reverse Chronological order"
        android:textColor="#000"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout_albums"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="No Results Found"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_files"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView

            android:id="@+id/recycler_view_albums"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        <include
            android:id="@+id/recycler_view_empty"
            android:layout_width="match_parent"
            layout="@layout/empty_view"
            android:visibility="gone"
            android:layout_height="match_parent">
        </include>

    </RelativeLayout>


</LinearLayout>