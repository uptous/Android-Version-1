<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fcf9eb"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/text_view_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text=""

        android:textSize="@dimen/_12sdp" />

    <TextView

        android:id="@+id/text_view_community_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"

        android:layout_toRightOf="@+id/text_view_owner_name"
        android:singleLine="true"
        android:text=""
        android:textColor="#000"
        android:textSize="@dimen/_12sdp" />


    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/transparent_background"
        android:padding="@dimen/_1sdp">

        <RelativeLayout
            android:id="@+id/layout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/rounded_home"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Nov 2, 2016"
                android:textSize="@dimen/_12sdp" />

            <ImageView



                android:id="@+id/image_view_uploaded_picture"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/text_view_title"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />


            <TextView

                android:id="@+id/text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:text="International"

                android:textColor="#000"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_view_news_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_title"
                android:layout_marginLeft="@dimen/_5sdp"
                android:autoLink="web"
                android:clickable="true"
                android:linksClickable="true"
                android:maxLines="5"
                android:padding="@dimen/_5sdp"
                android:text="International"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text_view_news_item_name"
                android:padding="@dimen/_5sdp"
                android:text="Read more.."
                android:visibility="gone" />


            <!--<TextView-->
            <!--android:id="@+id/text_view_collapsed"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_below="@+id/text_view_news_item_name_expand"-->
            <!--android:padding="@dimen/_5sdp"-->
            <!--android:text="collapsed"-->
            <!--android:visibility="gone" />-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_date"

            android:background="#f3f3f3">

            <ImageView
                android:id="@+id/image_view_go_detail"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@mipmap/arrow_rounded" />

            <ImageView
                android:id="@+id/image_view_file"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@mipmap/file"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/text_view_news_item_description"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toEndOf="@+id/image_view_file"
                android:layout_toRightOf="@+id/image_view_file"
                android:maxLines="2"
                android:text=""
                android:textColor="#000"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_reply_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_detail_comment"
            android:background="@drawable/rounded_home_bottom"
            android:orientation="horizontal"

            android:weightSum="2">

            <LinearLayout
                android:id="@+id/layout_reply_to_single"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_reply"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@mipmap/reply_blue" />

                <TextView
                    android:id="@+id/text_view_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Reply to allen"
                    android:textColor="#5284e0"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_comment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_comment"
                android:gravity="center"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@mipmap/comment" />

                <TextView
                    android:id="@+id/text_view_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Comment"
                    android:textColor="#5284e0"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_detail_comment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentLeft="true"

            android:layout_below="@+id/layout_detail"
            android:background="#fff"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingRight="@dimen/_5sdp">

            <TextView
                android:id="@+id/text_view_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="#5284e0"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout

        android:id="@+id/layout_contact"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:orientation="horizontal"

        android:visibility="gone"


        >


        <TextView
            android:id="@+id/textview_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:text="Ram"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/textview_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:text="Ram"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/image_view_owner"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:scaleType="centerCrop"
        android:visibility="gone" />
</RelativeLayout>