<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf9eb"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_25sdp">

        <TextView
            android:id="@+id/text_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No New is... No News ???"
            android:textColor="@color/empty_title"
            android:textSize="@dimen/_24sdp" />

        <TextView
            android:id="@+id/text_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:text="there is nothing to do this dummy text ,"
            android:textColor="@color/empty_title2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="there is nothing to do this dummy text "
            android:textColor="@color/empty_content" />

    </LinearLayout>
</LinearLayout>