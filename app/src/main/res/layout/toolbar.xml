<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5284e0"
    app:theme="@style/ToolBarStyle">


    <LinearLayout
        android:id="@+id/imgmenuleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:src="@mipmap/navigation_icon" />
    </LinearLayout>


    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:src="@mipmap/back" />


        <LinearLayout
            android:id="@+id/layout_community_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_down"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@mipmap/down_sorting_arrow" />

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="All Communities"
                android:textColor="#fff"
                android:maxWidth="@dimen/_240sdp"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>


    <TextView
        android:id="@+id/text_view_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:visibility="gone"
        android:maxLines="1"
        android:text=""
        android:layout_marginRight="@dimen/_5sdp"
        android:textColor="#fff"
        android:textSize="@dimen/_14sdp" />
    <TextView
        android:id="@+id/text_view_message_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:maxLines="1"
        android:text=""
        android:textColor="#fff"
        android:textSize="@dimen/_16sdp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_10sdp">


        <ImageView
            android:visibility="gone"
            android:id="@+id/image_view_community_invitations"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@mipmap/community_invite"


         />

        <LinearLayout

            android:id="@+id/layout_invitations"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/red_circle_fill"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_view_invitation_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.Toolbar>