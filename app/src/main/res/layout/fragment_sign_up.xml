<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fcf9eb"
    android:orientation="vertical">
    <RelativeLayout

        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/toolbar"
        android:background="#c9c9c3"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/layout_searchbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/text_view_cancel"
            android:background="@drawable/rounded_all_files"
            android:gravity="center">


            <android.support.v7.widget.SearchView

                style="@style/AppTheme.SearchView"
                android:id="@+id/serach_view_filter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"


                />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_30sdp"
                android:id="@+id/text_view_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>



        <TextView
            android:textStyle="bold"
            android:id="@+id/text_view_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="Cancel"
            android:textColor="@color/tab_indicator"
            android:textSize="@dimen/_12sdp"

          />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/layout_search"
        android:id="@+id/recycler_view_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
