<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fcf9eb"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp">

        <TextView
            android:id="@+id/text_view_community_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="#5284e0"
            android:padding="@dimen/_2sdp"
            android:textStyle="bold"
            android:text="Community Name"
            android:textColor="#fff" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_community_name"
            android:background="@drawable/rounded_all_files"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/image_view_file"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/file" />

                <TextView
                    android:id="@+id/text_view_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/image_view_file"
                    android:text="Event Date"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/text_view_cutoff_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_event_date"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/image_view_file"
                    android:text="Cutoff date: "
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/image_view_detail"
                    android:gravity="end"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_view_detail"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@mipmap/arrow_rounded" />
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>